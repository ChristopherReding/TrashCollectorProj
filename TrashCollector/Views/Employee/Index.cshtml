@model TrashCollector.Models.EmployeeCustomerViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Today's Customers</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Customer Address
            </th>
            <th>
                Customer Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.employee.ZipCode)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.customerList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>            
            <td>
                <a asp-action="ConfirmPickup" asp-route-id="@item.Id">Confirm Pickup</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Customer Details</a>
            </td>
        </tr>

}   <p>Search By Day</p>
    <p>
        <a asp-action="DailyDetails" asp-route-dayOfWeek="Monday">Monday</a> |
        <a asp-action="DailyDetails" asp-route-dayOfWeek="Tuesday">Tuesday</a> |
        <a asp-action="DailyDetails" asp-route-dayOfWeek="Wednesday">Wednesday</a> |
        <a asp-action="DailyDetails" asp-route-dayOfWeek="Thursday">Thursday</a> |
        <a asp-action="DailyDetails" asp-route-dayOfWeek="Friday">Friday</a> |
        <a asp-action="Index">Today</a>
    </p>
    </tbody>
</table>
