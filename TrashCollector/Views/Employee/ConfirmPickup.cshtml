@model TrashCollector.Models.Customer
@{
    ViewData["Title"] = "ConfirmPickup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Confirm Pickup</h1>
<p>
    <a>Confirm pickup for</a>
    <a>@Html.DisplayFor(model => model.FirstName) </a>
    <a>@Html.DisplayFor(model => model.LastName)</a> | <a asp-action="Index">Back to Home</a>
</p>
<form asp-action="ConfirmPickup">
    <input type="hidden" asp-for="FirstName" />
    <input type="hidden" asp-for="LastName" />
    <input type="hidden" asp-for="IdentityUserId" />
    <input type="hidden" asp-for="WeeklyPickupDay" />
    <input type="hidden" asp-for="OneTimePickup" />
    <input type="hidden" asp-for="StreetAddress" />
    <input type="hidden" asp-for="ZipCode" />
    <input type="hidden" asp-for="ServiceIsActive" />
    <input type="hidden" asp-for="StartServiceHold" />
    <input type="hidden" asp-for="EndServiceHold" />
    <input type="hidden" asp-for="AccountBalance" />

    <div class="form-group">
        <input type="submit" value="Confirm" class="btn btn-primary" />
    </div>
</form>

